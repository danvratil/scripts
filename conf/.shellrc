# User specific aliases and functions

function cdbuild() {
	_path=`pwd`
	if [[ $_path == /data/KDE/src* ]]; then
		cd `echo $_path | sed "s/\/data\/KDE\/src/\/data\/KDE\/build\//"`
	else
		cd /data/KDE/src
	fi
}

function fedpkgbuild() {
	for branch in $@; do
		git checkout $branch
		fedpkg build --nowait
	done
}


